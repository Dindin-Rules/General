//
//----------------------------------------------
// do not make changes in this aready unless you know
// what you are doing or are instructed to
//----------------------------------------------
//
//----------------------------------------------
// This section Sets up the lists.
//----------------------------------------------
//
if not timerexists 'skilltimer'
  settimer 'skilltimer' 11000
endif
//
if not listexists 'playfair'
  createlist 'playfair'
endif
//
//
//----------------------------------------------
// This section Sets up the lists.
//----------------------------------------------
//
pause 333
@useobject 'backpack'
pause 333
//
while not dead
  //
  //----------------------------------------------
  // This section Trains Magery
  //----------------------------------------------
  //
  if not findalias 'spelltarget'
    setalias 'spelltarget'
  endif
  if int > 50
    if mana < 30
      while mana < 100
        useskill 'meditation'
        pause 6000
      endwhile
    endif
    if skill 'Magery' >= '50' and skill 'Magery' < '100'
      if skill 'Magery' >= 50 and skill 'Magery' <= 59.9
        if hits > 20
          cast 'Lightning'
          waitfortarget 3000
          target 'spelltarget'
          pause 1000
        else
          cast 'Greater Heal'
          waitfortarget 3000
          target 'self'
          pause 1000
          cast 'Greater Heal'
          waitfortarget 3000
          target 'self'
          pause 1000
        endif
      endif
      if skill 'Magery' >= 60 and skill 'Magery' <= 69.9
        cast 'Invisibility'
        waitfortarget 3000
        target 'self'
        pause 1000
      endif
      if skill 'Magery' >= 70 and skill 'Magery' <= 79.9
        if hits > 50
          cast 'Flame Strike'
          waitfortarget 3000
          '
          target 'spelltarget'
          pause 1000
        else
          cast 'Greater Heal'
          waitfortarget 3000
          target 'self'
          pause 1000
          cast 'Greater Heal'
          waitfortarget 3000
          target 'self'
          pause 1000
        endif
      endif
      if skill 'Magery' >= 80 and skill 'Magery' <= 99.9
        sysmsg 'magery over 80' 38
        cast "Summon Water Elemental"
        pause 333
        if followers > 3
          msg 'all release'
          waitforgump 0x3780b38e 15000
          replygump 0x3780b38e 1
          pause 333
        endif
      endif
    endif
  endif
  //
  //----------------------------------------------
  // This section Trains Magery
  //----------------------------------------------
  //
  //
  //----------------------------------------------
  // This section trains EvalID to gain intel fast to 50
  //----------------------------------------------
  //
  if int < 50
    headmsg 'Training Eval Only to Gain INT to 50'
    pause 1000
    @canceltarget
    @removetimer 'search'
    @createtimer 'search'
    @removelist 'found'
    @createlist 'found'
    @unsetalias 'enemy'
    @getenemy 'any' next
    @pushlist! 'found' 'enemy'
    @removetimer 'search'
    @setalias 'target1' found[0]
    pause 333
    useskill 'Evaluating Intelligence'
    waitfortarget 500
    target! 'target1'
    pause 2000
  else
    // Restarts the section for training skills
    if @inlist 'playfair' 'EvalID'
      if @inlist 'playfair' 'EvalIDTwice'
        if @inlist 'playfair' 'SpiritSpeak'
          if @inlist 'playfair' 'SpiritSpeakTwice'
            if @inlist 'playfair' 'Herding'
              if @inlist 'playfair' 'Tracking'
                headmsg 'Reset Skills Set'
                clearlist 'playfair'
                pause 600
              endif
            endif
          endif
        endif
      endif
    endif
    //
    //----------------------------------------------
    // This section Trains Evaluating Intelligence
    //----------------------------------------------
    //
    if timer 'skilltimer' > 2300
      if not @inlist! 'playfair' 'EvalIDTwice' and @inlist! 'playfair' 'EvalID'
        if skill 'Evaluating Intelligence' >= '50' and skill 'Evaluating Intelligence' < '100'
          headmsg 'Training Eval - 2sec timer try2'
          pause 333
          @canceltarget
          @removetimer 'search'
          @createtimer 'search'
          @removelist 'found'
          @createlist 'found'
          @unsetalias 'enemy'
          @getenemy 'any' next
          @pushlist! 'found' 'enemy'
          @removetimer 'search'
          @setalias 'target1' found[0]
          pause 333
          useskill 'Evaluating Intelligence'
          waitfortarget 500
          target! 'target1'
          settimer 'skilltimer' 0
          if not @inlist! 'playfair' 'EvalID'
            if @injournal 'What would you like to evaluate?' 'system'
              @pushlist 'playfair' 'EvalID'
            endif
          else
            if @injournal 'What would you like to evaluate?' 'system'
              @pushlist 'playfair' 'EvalIDTwice'
            endif
          endif
        endif
      endif
      if not @inlist! 'playfair' 'EvalID'
        if not @inlist! 'playfair' 'Herding'
          if not @inlist! 'playfair' 'Tracking'
            if skill 'Evaluating Intelligence' >= '50' and skill 'Evaluating Intelligence' < '100'
              headmsg 'Training Eval - 2sec timer try1'
              pause 333
              @canceltarget
              @removetimer 'search'
              @createtimer 'search'
              @removelist 'found'
              @createlist 'found'
              @unsetalias 'enemy'
              @getenemy 'any' next
              @pushlist! 'found' 'enemy'
              @removetimer 'search'
              @setalias 'target1' found[0]
              pause 333
              useskill 'Evaluating Intelligence'
              waitfortarget 500
              target! 'target1'
              settimer 'skilltimer' 0
              if not @inlist! 'playfair' 'EvalID'
                if @injournal 'What would you like to evaluate?' 'system'
                  @pushlist 'playfair' 'EvalID'
                endif
              else
                if @injournal 'What would you like to evaluate?' 'system'
                  @pushlist 'playfair' 'EvalIDTwice'
                endif
              endif
            endif
          endif
        endif
      endif
      //
    endif
    //
    //----------------------------------------------
    // This section Trains Evaluating Intelligence
    //----------------------------------------------
    //
    //
    //----------------------------------------------
    // This section Trains Spirit Speak
    //----------------------------------------------
    //
    if timer 'skilltimer' > 2300
      //
      if not @inlist! 'playfair' 'SpiritSpeakTwice' and @inlist! 'playfair' 'SpiritSpeak'
        if skill 'Spirit Speak' >= '50' and skill 'Spirit Speak' < '100'
          headmsg 'Training Spirit Speak - 2sec timer try2'
          pause 333
          useskill 'Spirit Speak'
          settimer 'skilltimer' 0
          if not @inlist! 'playfair' 'SpiritSpeak'
            if @injournal 'You fail your attempt at contacting the netherworld.' 'system' or if @injournal 'You establish contact with the netherworld.' 'system'
              @pushlist 'playfair' 'SpiritSpeak'
            endif
          else
            if @injournal 'You fail your attempt at contacting the netherworld.' 'system' or if @injournal 'You establish contact with the netherworld.' 'system'
              @pushlist 'playfair' 'SpiritSpeakTwice'
            endif
            @pushlist 'playfair' 'SpiritSpeak'
          endif
        endif
      endif
      if not @inlist! 'playfair' 'SpiritSpeak'
        if not @inlist! 'playfair' 'Herding'
          if not @inlist! 'playfair' 'Tracking'
            if skill 'Spirit Speak' >= '50' and skill 'Spirit Speak' < '100'
              headmsg 'Training Spirit Speak - 2sec timer try1'
              pause 333
              useskill 'Spirit Speak'
              settimer 'skilltimer' 0
              if not @inlist! 'playfair' 'SpiritSpeak'
                if @injournal 'You fail your attempt at contacting the netherworld.' 'system' or if @injournal 'You establish contact with the netherworld.' 'system'
                  @pushlist 'playfair' 'SpiritSpeak'
                endif
              else
                if @injournal 'You fail your attempt at contacting the netherworld.' 'system' or if @injournal 'You establish contact with the netherworld.' 'system'
                  @pushlist 'playfair' 'SpiritSpeakTwice'
                endif
                @pushlist 'playfair' 'SpiritSpeak'
              endif
            endif
          endif
        endif
      endif
    endif
    //
    //----------------------------------------------
    // This section Trains Spirit Speak
    //----------------------------------------------
    //
    //
    //----------------------------------------------
    // This section Trains Herding
    //----------------------------------------------
    //
    if timer 'skilltimer' > 7500
      if not @inlist! 'playfair' 'Herding'
        if skill 'Herding' >= '50' and skill 'Herding' < '100'
          if findtype '0xe81' 'any' 'backpack'
            headmsg 'Training Herding -7sec timer'
            pause 333
            usetype '0xe81'
            waitfortarget 333
            target! 'self'
            settimer 'skilltimer' 0
            @pushlist 'playfair' 'Herding'
          endif
        endif
      endif
    endif
    //
    //----------------------------------------------
    // This section Trains Herding
    //----------------------------------------------
    //
    //
    //----------------------------------------------
    // This section Trains Tracking
    //----------------------------------------------
    //
    if timer 'skilltimer' > 10500
      if not @inlist! 'playfair' 'Tracking'
        if skill 'Tracking' >= '50' and skill 'Tracking' < '100'
          headmsg 'Training Tracking - 10sec timer'
          pause 333
          useskill 'Tracking'
          waitforgump 0xfe5c638b 333
          replygump 0xfe5c638b 2
          settimer 'skilltimer' 0
          @pushlist 'playfair' 'Tracking'
        endif
      endif
    endif
  endif
  //
  //----------------------------------------------
  // This section Trains Tracking
  //----------------------------------------------
  //
  //
  //----------------------------------------------
  // This section is the end of the script
  //----------------------------------------------
  //
endwhile
//
//----------------------------------------------
// This section is the end of the script
//----------------------------------------------
//
